---
  <header class="border-b-4 mb-10 fixed top-0 left-0 right-0 z-50 lexend bg-white border-gray-200 leading-loose">
    <div class="max-w-5xl container mx-auto px-4 py-8 flex justify-between items-center">
      <a href="/">
        <div class="text-xl font-bold">
          Yuya Akatsu
        </div>
      </a>
      { Astro.url.pathname === '/' ? (

        <nav class="space-x-4 hidden md:block">
          <a href="#works" class="capitalize  relative pb-1 line">works</a>
          <a href="#profile" class="capitalize relative pb-1 line">profile</a>
          <a href="#contact" class="capitalize relative pb-1 line">contact</a>
        </nav>
      ) : null }

    </div>
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap');

.line::before {
    content: '';
    background: #E61515;
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 2px;
    transform: scale(0, 1);
    transform-origin: right top;
    transition: transform 0.3s;
}

.line:hover::before {
    transform-origin: left top;
    transform: scale(1, 1);
}
.lexend {
    font-family: "Lexend", sans-serif;
    font-style: normal;
}

    </style>
  </header>
